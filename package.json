{
  "name": "allcheckspassed",
  "description": "GitHub Action to wait and confirm that all checks reported on a commit have passed",
  "version": "1.0.0",
  "author": "wechuli",
  "private": true,
  "homepage": "https://github.com/wechuli/allcheckspassed",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wechuli/allcheckspassed.git"
  },
  "bugs": {
    "url": "https://github.com/wechuli/allcheckspassed/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "typescript",
    "checks"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "npm run format:write && npm run package",
    "package": "ncc build src/index.ts --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run test && npm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.1.0",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  }
}
